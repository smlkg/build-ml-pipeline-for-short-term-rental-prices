name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact:
        description: "The name of the input artifact to clean"
        type: string

      filter_column:
        description: "The column name to apply the filter on"
        type: string

      filter_value:
        description: "The threshold value to filter the column"
        type: string

      output_artifact:
        description: "The name of the cleaned output artifact"
        type: string

      output_type:
        description: "The type of the output artifact"
        type: string

      output_description:
        description: "A brief description of the output artifact"
        type: string

    command: >-
        python run.py --input_artifact {input_artifact} --filter_column {filter_column} --filter_value {filter_value} --output_artifact {output_artifact} --output_type {output_type} --output_description {output_description}
